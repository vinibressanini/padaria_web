@page
@model PadariaWeb.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a New Customer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoyalCustomer.Name" class="control-label"></label>
                <input asp-for="LoyalCustomer.Name" class="form-control" />
                <span asp-validation-for="LoyalCustomer.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="LoyalCustomer.Cpf" class="control-label"></label>
                <input asp-for="LoyalCustomer.Cpf" class="form-control" />
                <span asp-validation-for="LoyalCustomer.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-4 mb-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
